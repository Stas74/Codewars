// Factorial

/*
Your task is to write function factorial.
*/

function factorial(n){
  let answer = 1
  if (n < 2) return answer
  while (n > 1) {
    answer *= n;
    n--
  }
  return answer
}


console.log(factorial(0));  //  1
console.log(factorial(1));  //  1
console.log(factorial(4));  //  24




const factorial = n => n ? factorial(n - 1) * n : 1;


function factorial(n){
  let answer = 1;
  
  while (n > 0) {
    answer *= n;
    n--;
  }
  
  return answer;
}
